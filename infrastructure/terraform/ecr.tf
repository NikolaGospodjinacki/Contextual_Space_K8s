          countType   = "sinceImagePushed"
          countUnit   = "days"
          countNumber = 7
        }
        action = {
          type = "expire"
        }
      },
      {
        rulePriority = 3
        description  = "Keep last 10 main/latest images"
        selection = {
          tagStatus     = "tagged"
          tagPrefixList = ["main", "latest"]
          countType     = "imageCountMoreThan"
          countNumber   = 10
        }
        action = {
